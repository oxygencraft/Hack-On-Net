    <Message Importance="high" Text="~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~" />
  </Target>
  <Target Name="AfterBuild">
    <CallTarget Targets="AfterBuildSteam" Condition="Exists('$(SteamHNDir)\HacknetPathfinder.exe')" />
